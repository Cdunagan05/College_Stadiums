<%= flash[:warning] %>
<h2>Login here!</h2>

<%= form_tag login_path do %>
  <div class="login-form">
    <%= label_tag :email, nil, :class => 'login' %>
    <%= text_field_tag :email %>
  </div>
  <div class="login-form">
    <%= label_tag :username, nil,  :class => 'login' %>
    <%= text_field_tag :username %>
  </div>
  <div class="login-form">
    <%= label_tag :password, nil,  :class => 'login' %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Submit"%>
<% end %>
