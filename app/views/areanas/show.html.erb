<p2><%= @areana.name %> stadium </p2>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="https://utsports.com/images/2017/7/7/facilities_neyland_arial.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="http://wsrsolutions.com/wp-content/uploads/2016/09/Wheelchair-Friendly-College-Football-Stadiums-Boone-Pickens-Stadium-Oklahoma-State-University-1024x683.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="http://footballstadiumdigest.com/wp-content/uploads/2017/07/edwards-byu.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-md-6">
      <ul class="rate-stadium-list">
        <li>
          <p>Rate This Stadium</p>
        </li>
        <li>
          <%= form_for ([@areana, @rating]) do |f| %>
            <select name="score" id="rating-list">
              <option value="5_Star" step="4" type="number">5 Stars</option>
              <option value="4_Star">4 Stars</option>
              <option value="3_Star">3 Stars</option>
              <option value="2_Star">2 Stars</option>
              <option value="1_Star">1 Star</option>
            </select>

            <%= f.hidden_field :user_id, {value: current_user.id} %>
            <%= f.submit "submit"%>
          <% end %>
        </li>
        </li>
          <p> The average rating of this stadium is <%= @areana.average_rating %> </p>
        </li>
        </li>
          <%= flash[:success] %>
          <%= flash[:error] %>
          <form action="/bucketlists" method="post">
            <button name="bucket" value="bucketlist">Add to Bucketlist</button>
            <input type="hidden" id="postId" name="areana_id" value="<%= @areana.id %>">
          </form>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="comments-div">
  <ul class="comments-list">
    <% @areana.comments.each do |c|  %>
    <li class="comment-on-areana">
      <p> <b><%= c.user.username %></b></p>
      <p> <%= c.body %></p>
      <p><sub>Posted <%= distance_of_time_in_words(Time.now, c.created_at) %> ago</sub></p>
      <% end %>
    </li>
  </ul>
</div>

<div>
  <%= form_for ([@areana, @areana.comments.build]) do |f| %>

  <%= f.label :body, 'Comment' %>
  <%= f.text_area :body %>

  <%= f.submit "Add Comment" %>
  <% end  %>
</div>
